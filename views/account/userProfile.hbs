<div class="ads-grid py-sm-5 py-43">
    <div class="container py-xl-4 py-lg-2">
        <!-- body========================================================================================================================================== -->

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        
        <div class="row">
            <div class="col-sm-10"><h1>User name</h1></div>
        </div>	
        <hr>
        <div class="container bootstrap snippet">
            <div class="row">
                <div class="col-sm-3"><!--left col-->
                    <div class="text-center">
                        <img src={{foundAcc.avatar}} class="avatar img-circle img-thumbnail" id="previewImg" alt="avatar">
                        <div class="mt-3"><strong>ID: </strong><span>{{foundAcc._id}}</span></div>
                        <button class="btn btn-success mt-3" data-toggle="modal" data-target="#changeAvt">Đổi ảnh đại diện</button>

                        <!-- Modal -->
                        <div class="modal fade" id="changeAvt" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                 <form action="/account/edit/{{foundAcc._id}}?_method=PUT" method="POST" enctype="multipart/form-data">
                                    <div class="" name="customerID" hidden>{{foundAcc._id}}</div>
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Chọn ảnh đại diện mới</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="custom-file">
                                            <input type="file" id="customerAvt" name="customerAvt" onchange="readURL(this);">
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                    <button class="btn btn-danger" data-dismiss="modal">Đóng</button>
                                    <button class="btn btn-success" type="submit">Lưu</button>
                                    </div>
                                </form>
                            </div>
                            </div>
                        </div>
                    </div>
                    <br>
                    
                    <!-- List actions -->
                    <div class="list-group">
                        <span class="list-group-item list-group-item-action active">Quản lý tài khoản</span>
                        <a href="#" class="list-group-item list-group-item-action">Thông tin cá nhân</a>
                        <a href="#" class="list-group-item list-group-item-action">Đơn hàng gần đây</a>
                        </div>
                        
                
                </div><!--/col-3-->

                <div class="col-sm-9">
                    <form action="/account/edit" method="PUT" enctype="multipart/form-data">                                    
                    <div class="row">
                        <div class="form-row col-12 h-100">
                            <div class="form-row col-12">
                                <div class="form-group col-6">
                                    <label for="productName">Họ tên:</label>
                                    <input type="text" class="form-control" placeholder="" id="productName" name="productName">
                                </div>
                            </div>
                            <div class="form-row col-12">
                                <div class="form-group col-lg-4">
                                    <label for="manufacturer">Ngày sinh:</label>
                                    <input type="date" class="form-control" placeholder="" id="manufacturer" name="manufacturer">
                                </div>
                            </div>
                            <div class="form-row col-12">
                                <div class="form-group col-lg-12">
                                    <label for="manufacturer">Địa chỉ:</label>
                                    <input type="text" class="form-control" placeholder="" id="manufacturer" name="manufacturer">
                                </div>
                            </div>
                            <div class="form-row col-12">
                                <div class="form-group col-lg-4">
                                    <label for="productBasePrice">Số điện thoại:</label>
                                    <input type="text" class="form-control" placeholder="" id="productBasePrice" name="productBasePrice">
                                </div>
                                <div class="form-group col-lg-8">
                                    <label for="productDiscountPrice">Email:</label>
                                    <input type="email" class="form-control" placeholder="" id="productDiscountPrice" name="productDiscountPrice">
                                </div>
                            </div>
                        </div>  
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary mr-2" >Cập nhật</button>
                        <a class="btn btn-danger" href="/list-products">Hủy</a>
                    </div>      
                </form>
                </div><!--/col-9-->
            </div><!--/row-->
        </div>
    </div>
</div>
